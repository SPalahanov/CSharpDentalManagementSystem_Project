@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 mb-4 text-primary">Welcome to the Admin Dashboard</h1>
        <p class="lead mb-5 text-muted">Manage your application using the sections below:</p>
    </div>

    <div class="row g-md-2">
        <div class="col-md-6">
            <div class="card shadow h-100 border-0">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Manage Users</h5>
                    <p class="card-text text-muted">Add, edit, or remove users and assign roles.</p>
                    <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index" class="btn btn-primary mt-auto w-100">
                        Go to Users
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow h-100 border-0">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="fas fa-film fa-3x text-secondary mb-3"></i>
                    <h5 class="card-title">Manage Appointments</h5>
                    <p class="card-text text-muted">Create, update, and delete appointment entries.</p>
                    <a asp-area="" asp-controller="Appointment" asp-action="Index" class="btn btn-secondary mt-auto w-100">
                        Go to Appointments
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-md-2 mt-3">
        <div class="col-md-6">
            <div class="card shadow h-100 border-0">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="fas fa-video fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Manage Patients</h5>
                    <p class="card-text text-muted">Add new patient, edit details, or remove them.</p>
                    <a asp-area="" asp-controller="Patient" asp-action="Index" class="btn btn-info mt-auto w-100">
                        Go to Patients
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow h-100 border-0">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="fas fa-user-md fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Manage Dentists</h5>
                    <p class="card-text text-muted">Add new dentist, edit details, or remove them.</p>
                    <a asp-area="" asp-controller="Dentist" asp-action="Index" class="btn btn-success mt-auto w-100">
                        Go to Dentists
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

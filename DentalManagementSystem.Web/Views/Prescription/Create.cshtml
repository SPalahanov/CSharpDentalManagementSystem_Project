@using DentalManagementSystem.Web.ViewModels.Prescription
@using System.Globalization
@model CreatePrescriptionFormModel

@{
    ViewData["Title"] = "Create Prescription";
}

<h2>Create Prescription</h2>

<form asp-action="Create" asp-controller="Prescription" method="post">
    <input type="hidden" asp-for="AppointmentId" />

    <div class="form-group">
        <label asp-for="MedicationName" class="control-label"></label>
        <input asp-for="MedicationName" class="form-control" />
        <span asp-validation-for="MedicationName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MedicationDescription" class="control-label"></label>
        <textarea asp-for="MedicationDescription" class="form-control"></textarea>
        <span asp-validation-for="MedicationDescription" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Create Prescription</button>
        <a asp-action="Details" asp-controller="Appointment" asp-route-id="@Model.AppointmentId" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
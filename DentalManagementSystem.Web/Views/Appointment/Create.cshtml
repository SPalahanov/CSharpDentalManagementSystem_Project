@using DentalManagementSystem.Web.ViewModels.Appointment
@model CreateAppointmentViewModel

<h2>Create Appointment</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="AppointmentDate"></label>
        <input asp-for="AppointmentDate" class="form-control" type="date" />
        <span asp-validation-for="AppointmentDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PatientId">Patient</label>
        <select asp-for="PatientId" class="form-control" asp-items="@(new SelectList(Model.Patients, "Id", "Name"))"></select>
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DentistId">Dentist</label>
        <select asp-for="DentistId" class="form-control" asp-items="@(new SelectList(Model.Dentists, "Id", "Name"))"></select>
        <span asp-validation-for="DentistId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AppointmentTypeId">Appointment Type</label>
        <select asp-for="AppointmentTypeId" class="form-control" asp-items="@(new SelectList(Model.AppointmentTypes, "Id", "Name"))"></select>
        <span asp-validation-for="AppointmentTypeId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Appointment</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to Appointments</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

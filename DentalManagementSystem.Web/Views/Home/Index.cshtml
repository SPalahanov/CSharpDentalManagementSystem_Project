@{
    ViewData["Title"] = "Home Page";
}

@if (!User.Identity.IsAuthenticated)
{
    <div class="bg-container">
        <div class="content">
            <h1>Dental Clinic Dr. Peneva!</h1>
            <p>Please log in or register to continue.</p>
        </div>
    </div>
}
@if (User.Identity.IsAuthenticated)
{
    <div class="container text-center mt-5">
        <h2>Welcome!</h2>
        <p>Please select your role in the system to continue.</p>
        <form method="post">
            <button type="submit" name="role" value="Patient" class="btn btn-primary btn-lg">Become a patient</button>
            <button type="submit" name="role" value="Dentist" class="btn btn-secondary btn-lg">Become a dentist</button>
        </form>
    </div>
}

<style>
    .content {
        color: black;
        text-align: center;
        padding: 80px;
    }
</style>

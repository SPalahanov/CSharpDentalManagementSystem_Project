@using DentalManagementSystem.Web.ViewModels.Patient
@model PatientDetailsViewModel

@{
    ViewData["Title"] = "Patient Details";
}

<h2>@Model.Name - Details</h2>

<p><strong>Name:</strong> @Model.Name</p>
<p><strong>Phone number:</strong> @Model.PhoneNumber</p>
<p><strong>Gender:</strong> @Model.Gender</p>
<p><strong>Date of birth:</strong> @Model.DateOfBirth</p>
<p><strong>Address:</strong> @Model.Address</p>
<p><strong>Allergies:</strong> @(!string.IsNullOrEmpty(Model.Allergies) ? Model.Allergies : "None")</p>
<p><strong>Insurance number:</strong> @(!string.IsNullOrEmpty(Model.InsuranceNumber) ? Model.InsuranceNumber : "None")</p>
<p><strong>Emergency contact:</strong> @(!string.IsNullOrEmpty(Model.EmergencyContact) ? Model.EmergencyContact : "None")</p>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to Patients</a>
<a asp-action="Edit" asp-route-id="@ViewContext.RouteData.Values["id"]" class="btn btn-warning mt-3">Edit</a>
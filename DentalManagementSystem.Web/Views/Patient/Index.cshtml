@using DentalManagementSystem.Web.ViewModels.Patient
@model IEnumerable<AllPatientsIndexViewModel>

@{
    ViewData["Title"] = "All Patients";
}

<h2>All Patients</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Gender</th>
            <th>PhoneNumber</th>
            <th>DateOfBirth</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (AllPatientsIndexViewModel patient in Model)
        {
            <tr>
                <td>@patient.Name</td>
                <td>@patient.Gender</td>
                <td>@patient.PhoneNumber</td>
                <td>@patient.DateOfBirth</td>
                <td>
                    <a asp-action="Details" asp-route-id="@patient.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@patient.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@patient.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Patient</a>
@using DentalManagementSystem.Web.ViewModels.Patient
@model EditPatientFormModel

@{
    ViewData["Title"] = "Edit Patient";
}

<h2>Edit Patient</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter Patient's Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Patient's Phone Number" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gender" class="control-label">Gender</label>
        <input asp-for="Gender" class="form-control" placeholder="Enter Patient's Gender" />
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth" class="control-label">Date of birth</label>
        <input asp-for="DateOfBirth" class="form-control" placeholder="Enter Patient's Date of birth" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label">Address</label>
        <input asp-for="Address" class="form-control" placeholder="Enter Patient's Address" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Allergies" class="control-label">Address</label>
        <input asp-for="Allergies" class="form-control" placeholder="Enter Patient's Allergies" />
        <span asp-validation-for="Allergies" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="InsuranceNumber" class="control-label">Address</label>
        <input asp-for="InsuranceNumber" class="form-control" placeholder="Enter Patient's Insurance number" />
        <span asp-validation-for="InsuranceNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmergencyContact" class="control-label">Address</label>
        <input asp-for="EmergencyContact" class="form-control" placeholder="Enter Patient's Emergency contact" />
        <span asp-validation-for="EmergencyContact" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
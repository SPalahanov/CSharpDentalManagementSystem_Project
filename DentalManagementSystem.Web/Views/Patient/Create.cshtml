@using DentalManagementSystem.Web.ViewModels.Patient
@model AddPatientInputModel

@{
    ViewData["Title"] = "Create Patient";
}

<div class="row">
    <div class="col-lg-8">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="SelectedUserId" class="control-label">Select User</label>
                <select asp-for="SelectedUserId" class="form-control" asp-items="@(new SelectList(Model.Emails, "Id", "Email"))">
                    <option value="">-- Select a User --</option>
                </select>
                <span asp-validation-for="SelectedUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter Patient's Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Patient's Phone Number" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">Address</label>
                <input asp-for="Address" class="form-control" placeholder="Enter Patient's Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label">Date of Birth</label>
                <input asp-for="DateOfBirth" class="form-control" placeholder="MM/DD/YYYY" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label">Gender</label>
                <input asp-for="Gender" class="form-control" placeholder="Enter Patient's Gender" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Allergies" class="control-label">Allergies</label>
                <input asp-for="Allergies" class="form-control" placeholder="Enter Patient's Allergies (Optional)" />
                <span asp-validation-for="Allergies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsuranceNumber" class="control-label">Insurance Number</label>
                <input asp-for="InsuranceNumber" class="form-control" placeholder="Enter Patient's Insurance Number (Optional)" />
                <span asp-validation-for="InsuranceNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmergencyContact" class="control-label">Emergency Contact</label>
                <input asp-for="EmergencyContact" class="form-control" placeholder="Enter Emergency Contact Details (Optional)" />
                <span asp-validation-for="EmergencyContact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create Patient</button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}